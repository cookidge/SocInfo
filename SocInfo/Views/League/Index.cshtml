@model IEnumerable<SocInfo.Models.Position>

@{
    ViewBag.Title = "League";
}

<br />
<br />
<br />


<h2>League</h2>


<br />

<table class="table">
    <tr>
        <th>
            Rank
        </th>
        <th>
            Team
        </th>
        <th>
        </th>
        <th>
            Played
        </th>
        <th>
            GS
        </th>
        <th>
            GA
        </th>
        <th>
            GD
        </th>
        <th>
            Points
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rank)
            </td>
            <td>
                <img src="@item.crestURI" alt="@item.team logo" height="40" width="40" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.team)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.playedGames)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.goals)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.goalsAgainst)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.goalDifference)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.points)
            </td>
        </tr>
    }

</table>

