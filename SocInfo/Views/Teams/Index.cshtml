@model IEnumerable<SocInfo.Models.Team>

@{
    ViewBag.Title = "Teams";
}

<br />
<br />
<br />

<h2>Teams</h2>

<br />

<table class="table">
    <tr>
        <th>
            Team
        </th>
        <th>
        </th>
        <th>
            Value
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@item.crestUrl" alt="@item.name logo" height="40" width="40" />
        </td>
        <td>
            <a href="/Team/Index?team=@item.name">@Html.DisplayFor(modelItem => item.name)</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.squadMarketValue)
        </td>
    </tr>
}
</table>
